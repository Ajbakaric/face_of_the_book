<!-- app/views/posts/index.html.erb -->
<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.content, post %>
      <p>Author: <%= post.user.email %></p>
      <p>Likes: <%= post.likes.count %></p>
      <ul>
        <% post.comments.each do |comment| %>
          <li>
            <p><%= comment.content %></p>
            <p>Author: <%= comment.user.email %></p>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

